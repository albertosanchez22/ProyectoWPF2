<Window x:Class="ProyectoWPF2.DialogoSesion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoWPF2"
        mc:Ignorable="d"
       
        Height="300"
        Width="400"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Title="Añadir Sala">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
        <TextBlock x:Name="alerta" Foreground="Red" TextAlignment="Center"></TextBlock>
        <StackPanel Orientation="Horizontal">
        <TextBlock>Pelicula:</TextBlock>
            <TextBox x:Name="peliculaañadirtextbox" Width="250"  ></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock>Sala:</TextBlock>
            <TextBox x:Name="salaañadirtextbox" Width="250"  ></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock>Hora:</TextBlock>
            <TextBox x:Name="horaañadirtextbox" Width="250"  ></TextBox>
        </StackPanel>
        <Button x:Name="aceptarañadirsesion" Click="aceptarañadirsesion_Click">Aceptar</Button>
        <Button x:Name="cancelarañadirsesion" Click="cancelarañadirsesion_Click">Cancelar</Button>
    </StackPanel>
</Window>