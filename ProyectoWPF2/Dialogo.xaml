<Window x:Class="ProyectoWPF2.Dialogo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoWPF2"
        mc:Ignorable="d"
       
        Height="300"
        Width="400"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Title="Añadir Sala">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
        <TextBlock x:Name="alerta" Foreground="Red" TextAlignment="Center"></TextBlock>
        <StackPanel Orientation="Horizontal">
        <TextBlock>Número/Nombre de la sala</TextBlock>
            <TextBox x:Name="numerotextbox" Width="250"  ></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock>Capacidad</TextBlock>
            <TextBox x:Name="capacidadtextbox" Width="250"  ></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock>Disponible</TextBlock>
            <RadioButton x:Name="disponiblecheck" IsChecked="True" ></RadioButton>
        </StackPanel>
        <Button x:Name="aceptarañadirsala" Click="aceptarañadirsala_Click">Aceptar</Button>
        <Button>Cancelar</Button>
    </StackPanel>
</Window>